{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% for reservation in userReservations %}
    {{ reservation.seance.movietitle }}
    {{ reservation.seance.date|date("Y-m-d") }}
    {{ reservation.capacity }}
    <a href="{{ path("modifyReservation", {"id": reservation.id}) }}">Modify</a>
    <a href="{{ path("deleteReservation", {"id": reservation.id}) }}">Delete</a>
{% endfor %}
{% endblock %}
