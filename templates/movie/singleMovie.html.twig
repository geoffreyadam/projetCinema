{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="allmovies">
            <li>
                <h3>{{ movie.title }}</h3>
                <p class="description">{{ movie.description }}</p>
                <p class="time">{{ movie.runtime }} minutes</p>
                {% for screening in screenings %}
                    {{ screening.date|date('Y-m-d') }}
                    {{ screening.room }}
                    <a href="{{ path('reservationConfirm', {"id": screening.id}) }}">Book this screening</a>
                {% endfor %}
            </li>

    </div>
    <a href="{{ path('allMovies') }}">See all movies</a>
{% endblock %}
